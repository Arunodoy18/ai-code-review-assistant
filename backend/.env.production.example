# Production Environment Configuration
# Copy this to .env and fill in your actual values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/codereview_db

# GitHub App Configuration (FILL THESE IN AFTER CREATING YOUR GITHUB APP)
GITHUB_APP_ID=YOUR_APP_ID_HERE
GITHUB_APP_PRIVATE_KEY_PATH=./keys/github-app-private-key.pem
GITHUB_WEBHOOK_SECRET=YOUR_WEBHOOK_SECRET_HERE

# LLM API Keys
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=your-anthropic-key-here

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_SECRET_KEY=your-secure-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
ENVIRONMENT=production
API_PORT=8000
FRONTEND_URL=https://your-frontend-url.vercel.app

# Error Tracking (Optional)
SENTRY_DSN=your-sentry-dsn-here
SENTRY_TRACES_SAMPLE_RATE=0.1

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Analysis Config
MAX_FILES_PER_ANALYSIS=50
MAX_LINES_PER_LLM_CALL=500
