# ===========================================
# Backend Environment Configuration Template
# ===========================================
# Copy this file to .env for local development
# cp .env.example .env
# ===========================================

# Database - Using SQLite for local development (switch to PostgreSQL for production)
DATABASE_URL=sqlite:///./local_dev.db

# GitHub App (optional for local runs)
ENABLE_GITHUB_INTEGRATION=false
ENABLE_GITHUB_WEBHOOKS=false
# GITHUB_APP_ID=
# GITHUB_APP_PRIVATE_KEY_PATH=
# GITHUB_APP_PRIVATE_KEY_B64=
# GITHUB_WEBHOOK_SECRET=

# LLM API (optional - leave unset to skip AI analysis)
# OPENAI_API_KEY=

# Background task queue (optional for local runs)
ENABLE_BACKGROUND_TASKS=false
# REDIS_URL=redis://redis:6379/0

# JWT Secret
JWT_SECRET_KEY=dev_secret_key_change_this_in_production_please

# Environment
ENVIRONMENT=development
PORT=8000
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Analysis Config
MAX_FILES_PER_ANALYSIS=50
MAX_LINES_PER_LLM_CALL=500
