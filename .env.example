# Database
DATABASE_URL=postgresql://user:password@localhost:5432/codereview_db

# GitHub App
GITHUB_APP_ID=your_app_id
GITHUB_APP_PRIVATE_KEY_PATH=./keys/github-app-private-key.pem
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# LLM API
OPENAI_API_KEY=your_openai_api_key
# Or use ANTHROPIC_API_KEY for Claude
# ANTHROPIC_API_KEY=your_anthropic_api_key

# Redis (for task queue)
REDIS_URL=redis://localhost:6379/0

# JWT Secret
JWT_SECRET_KEY=your_jwt_secret_key_change_this_in_production

# Environment
ENVIRONMENT=development
API_PORT=8000
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Analysis Config
MAX_FILES_PER_ANALYSIS=50
MAX_LINES_PER_LLM_CALL=500
