# ===========================================
# Environment Configuration Template
# ===========================================
# Copy this file to .env and fill in real values
# cp .env.example .env
# ===========================================

# Database - Using SQLite for local development (switch to PostgreSQL for production)
DATABASE_URL=sqlite:///./local_dev.db

# GitHub App (placeholder - needs real credentials)
GITHUB_APP_ID=123456
GITHUB_APP_PRIVATE_KEY_PATH=./keys/github-app-private-key.pem
GITHUB_WEBHOOK_SECRET=test_webhook_secret_change_in_production

# LLM API (placeholder - needs real key)
OPENAI_API_KEY=sk-test-key-replace-with-real-key

# Redis (use localhost for local dev, docker-compose overrides this)
REDIS_URL=redis://localhost:6379/0

# JWT Secret
JWT_SECRET_KEY=dev_secret_key_change_this_in_production_please

# Environment
ENVIRONMENT=development
API_PORT=8000
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Analysis Config
MAX_FILES_PER_ANALYSIS=50
MAX_LINES_PER_LLM_CALL=500
